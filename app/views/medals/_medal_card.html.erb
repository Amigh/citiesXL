
<div class=" ui special link card scard" id="wrapper"  data-id="<%= medal.id %>">

  <div class="blurring dimmable image">
    <div class="ui dimmer">
      <div class="content">
        <div class="ui center">
          <% if admin_signed_in? %>
              <div class="ui vertical labeled icon buttons">
                <%= link_to  edit_medal_path(medal),:class => "ui  button" do%>
                    <i class="edit icon"></i>
                    ویرایش
                <% end %>
                <%= link_to  medal, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "ui red button" do%>
                    <i class="trash icon"></i>
                    حذف
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= image_tag medal.image %>
  </div>


  <div class="ui content">
    <div class="ui header">
      <%= link_to medal do%>
          <%= 'مدال'+' '+medal.per_type_name + ' '+ medal.display_name %>
      <% end %>
    </div>
  </div>
  <div class="content">
    <div class="ui meta label fluid">
      <i class="diamond icon"></i>
      <%= 'امتیاز: ' + medal.score.to_s  %>
    </div>

    <div class="ui description">

    </div>
  </div>
  <!--<div class="ui extra content">-->
  <!--<span class="ui  floated">-->

  <!--</span>-->
  <!--</div>-->
  <%= link_to medal_path(medal),:class => "ui green labeled icon bottom attached button" do%>
      <i class="arrow circle down icon"></i>
      ...بیشتر
  <% end %>
</div>
