<div class="ui green center aligned segment ">

  <div class="divider horizontal ui ">دریافت لیست دانش آموزان </div>
  <%= form_tag ({:controller =>'students',:action=>'export'}) ,{:multipart => true} do%>
      <div class="ui  action  input">
        <%= select_tag(:year, options_for_select([['1392-1393'], ['1393-1394'], ['1394-1395']], selected: :year ),
                       :class =>'ui selection  compact dropdown') %>
        <%= button_tag  type: 'submit',:class => 'ui green button labeled icon  ' do %>
            <i class="download icon"></i>
            دانلود لیست دانش آموزان
        <% end %>
      </div>
  <% end %>

  <div class="divider horizontal ui ">دریافت لیست پروژه ها</div>
  <%= form_tag ({:controller =>'projects',:action=>'export',:method => :post}) ,{:multipart => true} do%>
      <div class="ui  action  input">
        <%= select_tag(:year, options_for_select([['1392-1393'], ['1393-1394'], ['1394-1395']], selected: :year ),
                       :class =>'ui selection  compact dropdown') %>
        <%= button_tag  type: 'submit',:class => 'ui green button labeled icon  ' do %>
            <i class="download icon"></i>
            دریافت لیست پروژه ها
        <% end %>
      </div>
  <% end %>

  <div class="divider horizontal ui ">بروز رسانی لیست دانش آموزان</div>
  <%= form_tag ({:controller =>'students',:action=>'import',:method => :post}) ,{:multipart => true} do%>
      <%= file_field '',:file ,:style =>'display:none;' ,:id =>'file'%>
      <div class="ui input action">
        <label for='file' class='ui action icon right labeled button' style="border-radius:0.28571429rem 0px 0px 0.28571429rem">
          فایل
          <i class="file icon"></i>
        </label>
        <%= button_tag  type: 'submit', :class => 'ui yellow button labeled icon ' do%>
            <i class="upload icon"></i>
            بروز رسانی لیست دانش آموزان
        <% end %>
      </div>
  <%end%>

  <div class="divider horizontal ui ">بروز رسانی پروژه های دانش آموزان</div>
  <%= form_tag ({:controller =>'projects',:action=>'import',:method => :post}) ,{:multipart => true} do%>
      <%= file_field '',:file ,:style =>'display:none;' ,:id =>'pfile'%>
      <div class="ui input action">
        <label for='pfile' class='ui action icon right labeled button' style="border-radius:0.28571429rem 0px 0px 0.28571429rem">
          فایل
          <i class="file icon"></i>
        </label>
        <%= button_tag  type: 'submit', :class => 'ui yellow  button labeled icon ' do%>
            <i class="upload icon"></i>
            بروز رسانی پروژه های دانش آموزان
        <% end %>
      </div>
  <%end%>
  <div class="hidden ui icon success message " id="mes">
    <i class=" file excel outline icon"></i>
    <div class="content">
      <p id="namefile" ></p>
    </div>
  </div>


</div>




<script>
    $(document).ready(function(){
        $('.ui.dropdown')
                .dropdown()
        ;
    });
    $('#pfile').change(function() {
        var str;
        str = $(this).val();
        $('#namefile').text(str);
        $('#mes').removeClass("hidden");
    });
    $('#file').change(function() {
        var str;
        str = $(this).val();
        $('#namefile').text(str);
        $('#mes').removeClass("hidden");
    });
</script>
