<p id="notice"><%= notice %></p>
<%= current_admin %>
<% if admin_signed_in?%>
    <%= link_to 'SignOut', destroy_admin_session_path,:method => :delete %>
<% else %>
    <%= link_to 'SignIn', new_admin_session_path,:method => :post %>
<% end %>
<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Image</th>
      <th>Score</th>
      <th>Class name</th>
      <th>Class number</th>
      <th>num of projects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= image_tag student.avatar ,:style =>  'width:20px;height:20px;'%></td>
        <td><%= student.score %></td>
        <td><%= student.class_name %></td>
        <td><%= student.class_number %></td>
        <td><%= student.projects.count %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<h2>Import Students</h2>
<%= form_tag import_students_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
<% end %>

<h2>Import Projects</h2>
<%= form_tag import_projects_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
<% end %>



